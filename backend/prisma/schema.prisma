generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// ==================== USERS & AUTH ====================

model User {
  id        Int     @id @default(autoincrement())
  
  // DIUBAH: Dibuat opsional (nullable) untuk Google Sign-In
  nim       String? @unique @db.VarChar(45)
  
  fullName  String  @db.VarChar(100)
  email     String  @unique @db.VarChar(255)
  
  // DIUBAH: Dibuat opsional (nullable) untuk Google Sign-In
  passwordHash String? @db.VarChar(255) 

  // BARU: Ditambahkan untuk menyimpan ID unik dari Google
  googleId  String? @unique @db.VarChar(255) 

  authMethod String @default("nim") @db.VarChar(20) // "nim", "email", "google"
  userType  String @default("regular") @db.VarChar(20) // "student", "regular"
  isProfileComplete Boolean @default(false)
  dateOfBirth DateTime?

  phone     String? @db.VarChar(15)
  programStudiId Int?
  angkatan  Int?
  status    String  @default("active") @db.VarChar(20)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  lastLogin DateTime?

  programStudi  ProgramStudi?    @relation(fields: [programStudiId], references: [id])
  conversations Conversation[]
  grades        AcademicGrade[]
  academicSummary AcademicSummary?
  sessions      Session[]

  @@map("users")
}

model Session {
  id           String    @id @default(uuid()) @db.VarChar(255)
  userId       Int
  token        String    @db.Text
  ipAddress    String?   @db.VarChar(45)
  userAgent    String?   @db.Text
  isActive     Boolean   @default(true)
  createdAt    DateTime  @default(now())
  lastActivity DateTime  @default(now())
  expiresAt    DateTime

  user User @relation(fields: [userId], references: [id])

  @@map("sessions")
}

// ==================== ACADEMIC ====================

model ProgramStudi {
  id        Int      @id @default(autoincrement())
  name      String   @db.VarChar(100)
  code      String   @unique @db.VarChar(10)
  faculty   String   @db.VarChar(100)
  status    String   @default("active") @db.VarChar(20)
  createdAt DateTime @default(now())

  users   User[]
  courses Course[]

  @@map("program_studi")
}

model Course {
  id             Int      @id @default(autoincrement())
  code           String   @unique @db.VarChar(20)
  name           String   @db.VarChar(100)
  sks            Int
  programStudiId Int
  semester       Int
  status         String   @default("active") @db.VarChar(20)
  createdAt      DateTime @default(now())

  programStudi ProgramStudi    @relation(fields: [programStudiId], references: [id])
  grades       AcademicGrade[]

  @@map("courses")
}

model AcademicGrade {
  id         Int      @id @default(autoincrement())
  userId     Int
  courseId   Int
  semester   String   @db.VarChar(10)
  grade      String   @db.VarChar(2)
  gradePoint Decimal  @db.Decimal(3, 2)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user   User   @relation(fields: [userId], references: [id])
  course Course @relation(fields: [courseId], references: [id])

  @@unique([userId, courseId, semester])
  @@map("academic_grades")
}

model AcademicSummary {
  id                      Int      @id @default(autoincrement())
  userId                  Int      @unique
  totalSks                Int
  ipk                     Decimal  @db.Decimal(3, 2)
  ipsLastSemester         Decimal  @db.Decimal(3, 2)
  semesterActive          Int
  totalSemestersCompleted Int
  updatedAt               DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])

  @@map("academic_summary")
}

// ==================== CHAT ====================

model Conversation {
  id        Int       @id @default(autoincrement())
  userId    Int
  title     String    @db.VarChar(200)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  user     User      @relation(fields: [userId], references: [id])
  messages Message[]

  @@map("chat_conversations")
}

model Message {
  id             Int      @id @default(autoincrement())
  conversationId Int
  role           String   @db.VarChar(10)
  content        String   @db.Text
  responseTime   Float?
  createdAt      DateTime @default(now())

  conversation Conversation @relation(fields: [conversationId], references: [id])

  @@map("chat_messages")
}