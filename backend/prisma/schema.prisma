generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

//
// ==================== USERS & AUTH ====================
//

model User {
  id        Int      @id @default(autoincrement())
  nim       String?  @unique @db.VarChar(45)
  fullName  String   @db.VarChar(100)
  email     String   @unique @db.VarChar(255)
  passwordHash String? @db.VarChar(255)
  googleId  String?  @unique @db.VarChar(255)

  authMethod String  @default("nim") @db.VarChar(20)
  userType   String  @default("regular") @db.VarChar(20)
  isProfileComplete Boolean @default(false)
  dateOfBirth DateTime?

  phone      String?  @db.VarChar(15)
  programStudiId Int?
  angkatan   Int?

  status     String   @default("pending") @db.VarChar(20)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  lastLogin DateTime?

  isEmailVerified Boolean @default(false)
  verificationCode String? @db.VarChar(6)
  verificationCodeExpires DateTime?
  verificationAttempts Int @default(0)

  programStudi  ProgramStudi?    @relation(fields: [programStudiId], references: [id])
  conversations Conversation[]
  grades        AcademicGrade[]
  academicSummary AcademicSummary?
  sessions      Session[]

  @@map("users")
}

model Session {
  id            String    @id @default(uuid()) @db.VarChar(255)
  userId        Int
  token         String    @db.Text
  ipAddress     String?   @db.VarChar(45)
  userAgent     String?   @db.Text
  isActive      Boolean   @default(true)
  createdAt     DateTime  @default(now())
  lastActivity  DateTime  @default(now())
  expiresAt     DateTime

  user User @relation(fields: [userId], references: [id])

  @@map("sessions")
}

//
// ==================== ACADEMIC ====================
//

model ProgramStudi {
  id        Int      @id @default(autoincrement())
  name      String   @db.VarChar(100)
  code      String   @unique @db.VarChar(10)
  faculty   String   @db.VarChar(100)
  status    String   @default("active") @db.VarChar(20)
  createdAt DateTime @default(now())

  users    User[]
  courses Course[]

  @@map("program_studi")
}

model Course {
  id             Int      @id @default(autoincrement())
  code           String   @unique @db.VarChar(20)
  name           String   @db.VarChar(100)
  sks            Int
  programStudiId Int
  semester       Int
  status         String   @default("active") @db.VarChar(20)
  createdAt      DateTime @default(now())

  programStudi ProgramStudi    @relation(fields: [programStudiId], references: [id])
  grades       AcademicGrade[]

  @@map("courses")
}

model AcademicGrade {
  id         Int      @id @default(autoincrement())
  userId     Int
  courseId   Int
  semester   String   @db.VarChar(10)
  grade      String   @db.VarChar(2)
  gradePoint Decimal  @db.Decimal(3, 2)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user    User   @relation(fields: [userId], references: [id])
  course Course @relation(fields: [courseId], references: [id])

  @@unique([userId, courseId, semester])
  @@map("academic_grades")
}

model AcademicSummary {
  id                      Int      @id @default(autoincrement())
  userId                  Int      @unique
  totalSks                Int
  ipk                     Decimal  @db.Decimal(3, 2)
  ipsLastSemester         Decimal  @db.Decimal(3, 2)
  semesterActive          Int
  totalSemestersCompleted Int
  updatedAt               DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])

  @@map("academic_summary")
}

//
// ==================== CHAT ====================
//

model Conversation {
  id        Int       @id @default(autoincrement())
  userId    Int
  title     String    @db.VarChar(200)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  user      User      @relation(fields: [userId], references: [id])
  messages  Message[]

  @@map("chat_conversations")
}

model Message {
  id             Int      @id @default(autoincrement())
  conversationId Int
  role           String   @db.VarChar(10)
  content        String   @db.Text
  responseTime   Float?
  createdAt      DateTime @default(now())

  // âœ… PERBAIKAN DI SINI: Menambahkan onDelete: Cascade
  conversation Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@map("chat_messages")
}

//
// ==================== RATE LIMITING (NEW) ====================
//

model RateLimit {
  id        String   @id @default(cuid())
  userId    String?  @unique
  ipAddress String?
  type      RateLimitType

  // Token bucket metrics
  tokens          Int       @default(30)
  lastRefill      DateTime  @default(now())
  burstCapacity   Int       @default(15)
  refillRate      Int       @default(1) // tokens per second

  // Usage analytics
  totalRequests   Int       @default(0)
  blockedRequests Int       @default(0)
  lastRequest     DateTime? @default(now())

  // Adaptive limits
  currentLimit    Int       @default(30)
  limitMultiplier Float     @default(1.0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([ipAddress])
  @@index([userId])
  @@index([type])
}

model RateLimitLog {
  id             String   @id @default(cuid())
  userId         String?
  ipAddress      String?
  userAgent      String?
  endpoint       String
  method         String
  statusCode     Int
  wasBlocked     Boolean  @default(false)
  requestSize    Int?     // tokens used
  responseTime   Int?     // ms
  timestamp      DateTime @default(now())

  @@index([timestamp])
  @@index([userId, timestamp])
  @@index([ipAddress, timestamp])
}

enum RateLimitType {
  GUEST
  USER
  PREMIUM
  IP
}